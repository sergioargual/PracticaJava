import java.text.SimpleDateFormat;
import java.time.LocalDate;

LocalDate Fecha = LocalDate.now()


pipeline 
{
    agent any

    stages 
    {
        stage('Chiste Informaticos')
        {
            steps 
            {
                script
                {
                  DayOfWeek dia = Fecha.getDayOfWeek();
                  if (dia.is("THURSDAY"))
                    {
                    println("JUEVES")
                    }

                  
                }
            }
        }
        
        stage('Chistes de humor Negro')
        {
            steps 
            {
                script
                {
                  DayOfWeek dia = Fecha.getDayOfWeek();
                  if (dia.is(FRIDAY))
                    {
                    println("VIERNES")
                    }


                }
            }
        }
        
        stage('Chistes de Futbol')
        {
            steps 
            {
                script
                {
                   DayOfWeek dia = Fecha.getDayOfWeek();
                   if (dia.is(MONDAY))
                    {
                    println("LUNES")
                    }
   
                }
            }
        }
        stage('Chistes de Politica')
        {
            steps 
            {
                script
                {
                   DayOfWeek dia = Fecha.getDayOfWeek();
                    if (dia.is(TUESDAY))
                    {
                    println("MARTES")
                    }
    
                }
            }
        }
        stage('Chistes de Medicos')
        {
            steps 
            {
                script
                {
                   DayOfWeek dia = Fecha.getDayOfWeek();
                    if (dia.is(WEDNESDAY))
                    {
                    println("MIERCOLES")
                    }
    
                }
            }
        }
        
    }
}
